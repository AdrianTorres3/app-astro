---
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
const pageTitle = "About me";
var sumaFinal = sumar();
function sumar() {
  return 5 + 5;
}
const identidad = {
  firstName: "Adrian",
  country: "Mexico",
  age: 21,
  occupation: "Fullsatck developer",
  hobbies: ["Play videogames", "workout", "Practice astro", "Practice laravel"],
};
const skills = [
  "CSS",
  "html",
  "SQL",
  "Mongo",
  "Java",
  "C#",
  "C++",
  "Python",
  "Javascript",
];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "blue";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ skillColor, fontWeight, textCase }}>
      h1 {
        color: purple;
        font-size: 4rem;
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <Header />

    <h1>About me</h1>
    <h2>{pageTitle}</h2>
    <p>Suma:</p>
    <p>{sumaFinal}</p>
    <p>Estoy trabajndo en el tutorial introductorio de Astro</p>
    <p>Este sitio se ira actualizando a medida de que avance en el tutorial</p>
    <hr />
    <h1>Algunos datoas sobre mi:</h1>
    <ul>
      <li>Mi nombre es: {identidad.firstName}.</li>
      <li>Mi edad es: {identidad.age}.</li>
      <li>Vivo en {identidad.country} y trabajo como {identidad.occupation}</li>
      <!-- MANERA EXTRANA DE DESPLEGAR LOS HOBBIES, CON UN IF? -->
      <p>Algunos de mis hobbies:</p>
      {
        identidad.hobbies.length >= 2 && identidad.hobbies.length < 5 && (
          <li>
            Dos de mis aficiones son: {identidad.hobbies[0]} y{" "}
            {identidad.hobbies[1]}{" "}
          </li>
        )
      }
      <!-- DESPLEGAR TODOS LOS HOBBIES -->
      <p>Todos los hobbies:</p>
      {identidad.hobbies.map((hobbie) => <li>{hobbie}</li>)}
      <!--  -->
    </ul>
    <h3>Mis habilidades son</h3>
    <ul>
      {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>
    <hr />
    {happy && <p>¡Estoy feliz de aprender Astro!</p>}

    {!finished && <p>¡He terminado este tutorial!</p>}

    {
      goal === 3 ? (
        <p>Mi objetivo es terminar en 3 días.</p>
      ) : (
        <p>Mi objetivo no son 3 días.</p>
      )
    }
    <Footer />
  </body>
  <script> import "../scripts/menu.js";</script>
</html>
